<Window x:Class="Projekat_A_DrogerijskaRadnja.Views.AddNewSellingItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekat_A_DrogerijskaRadnja.Views"
        mc:Ignorable="d"
        Title="Add New Selling Item" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Product -->
        <TextBlock Grid.Row="0" Text="Product:" Margin="0 0 0 5" Foreground="{DynamicResource UserSideBarBackground}" FontWeight="Bold"/>
        <ComboBox x:Name="cmbProducts" Grid.Row="1" Margin="0 0 0 10"
                  VerticalAlignment="Top" Height="30" 
                  DisplayMemberPath="Name" 
                  SelectedValuePath="ProductId"
                  SelectionChanged="cmbProducts_SelectionChanged" />

        <TextBlock Grid.Row="2" Text="Purchase:" Margin="0 0 0 5" Foreground="{DynamicResource UserSideBarBackground}" FontWeight="Bold"/>
        <ComboBox x:Name="cmbPurchases" Grid.Row="3" Margin="0 0 0 10"
                  VerticalAlignment="Top" Height="30"/>

        <TextBlock Grid.Row="4" Text="Price:" Margin="0 0 0 5" Foreground="{DynamicResource UserSideBarBackground}" FontWeight="Bold"/>
        <TextBox x:Name="txtPrice" Grid.Row="5" Margin="0 0 0 10"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Save" Width="80" Margin="0 0 10 0" Click="BtnSave_Click" Background="{DynamicResource UserUpdateButton}" Foreground="{DynamicResource UserTextColor}"/>
            <Button Content="Cancel" Width="80" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
