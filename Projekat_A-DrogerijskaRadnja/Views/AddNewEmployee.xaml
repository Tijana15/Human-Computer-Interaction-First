<Window x:Class="Projekat_A_DrogerijskaRadnja.Views.AddNewEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Employee" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource EmployeeName}" FontWeight="Bold" Grid.Row="0"/>
        <TextBox Text="" Grid.Row="0" Margin="100,0,0,5" x:Name="NameTextBox" Width="Auto"/>

        <TextBlock Text="{DynamicResource EmployeeLastname}" FontWeight="Bold" Grid.Row="1"/>
        <TextBox Text="" Grid.Row="1" Margin="100,0,0,5" x:Name="LastNameTextBox"/>

        <TextBlock Text="{DynamicResource EmployeeTelephone}" FontWeight="Bold" Grid.Row="2"/>
        <TextBox Text="" Grid.Row="2" Margin="100,0,0,5" x:Name="TelephoneTextBox"/>

        <TextBlock Text="{DynamicResource EmployeeAddress}" FontWeight="Bold" Grid.Row="3"/>
        <TextBox Text="" Grid.Row="3" Margin="100,0,0,5" x:Name="AddressTextBox"/>
        <TextBlock Text="{DynamicResource EmployeeSalary}" FontWeight="Bold" Grid.Row="4"/>
        <TextBox Text="" Grid.Row="4" Margin="100,0,0,5" x:Name="SalaryTextBox"/>

        <TextBlock Text="{DynamicResource EmployeeHireDate}" FontWeight="Bold" Grid.Row="5"/>
        <TextBox Text="" Grid.Row="5" Margin="100,0,0,5" x:Name="HireDateTextBox"/>

        <TextBlock Text="{DynamicResource EmployeeShift}" FontWeight="Bold" Grid.Row="6"/>
        <TextBox Text="" Grid.Row="6" Margin="100,0,0,5" x:Name="ShiftTextBox"/>

        <TextBlock Text="{DynamicResource EmployeeObligation}" FontWeight="Bold" Grid.Row="7"/>
        <TextBox Text="" Grid.Row="7" Margin="100,0,0,5" x:Name="ObligationTextBox"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="{DynamicResource SaveButton}" Click="OnSaveClick" Background="{DynamicResource ButtonColor}" Foreground="White" Width="80" Margin="10"/>
            <Button Content="{DynamicResource CancelButton}" Click="OnCancelClick" Background="Gray" Foreground="White" Width="80" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
