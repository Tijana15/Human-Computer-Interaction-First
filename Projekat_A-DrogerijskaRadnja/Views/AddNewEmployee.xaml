<Window x:Class="Projekat_A_DrogerijskaRadnja.Views.AddNewEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Employee" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Name:" FontWeight="Bold" Grid.Row="0"/>
        <TextBox Text="" Grid.Row="0" Margin="100,0,0,5" x:Name="NameTextBox"/>

        <TextBlock Text="Last Name:" FontWeight="Bold" Grid.Row="1"/>
        <TextBox Text="" Grid.Row="1" Margin="100,0,0,5" x:Name="LastNameTextBox"/>

        <TextBlock Text="Telephone:" FontWeight="Bold" Grid.Row="2"/>
        <TextBox Text="" Grid.Row="2" Margin="100,0,0,5" x:Name="TelephoneTextBox"/>

        <TextBlock Text="Address:" FontWeight="Bold" Grid.Row="3"/>
        <TextBox Text="" Grid.Row="3" Margin="100,0,0,5" x:Name="AddressTextBox"/>
        <TextBlock Text="Salary ($):" FontWeight="Bold" Grid.Row="4"/>
        <TextBox Text="" Grid.Row="4" Margin="100,0,0,5" x:Name="SalaryTextBox"/>

        <TextBlock Text="Hire Date:" FontWeight="Bold" Grid.Row="5"/>
        <TextBox Text="" Grid.Row="5" Margin="100,0,0,5" x:Name="HireDateTextBox"/>

        <TextBlock Text="Shift:" FontWeight="Bold" Grid.Row="6"/>
        <TextBox Text="" Grid.Row="6" Margin="100,0,0,5" x:Name="ShiftTextBox"/>

        <TextBlock Text="Obligation:" FontWeight="Bold" Grid.Row="7"/>
        <TextBox Text="" Grid.Row="7" Margin="100,0,0,5" x:Name="ObligationTextBox"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Save" Click="OnSaveClick" Background="HotPink" Foreground="White" Width="80" Margin="10"/>
            <Button Content="Cancel" Click="OnCancelClick" Background="Gray" Foreground="White" Width="80" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
