<UserControl x:Class="Projekat_A_DrogerijskaRadnja.Views.BillsOverview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource UserMainBackground}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filter Panel -->
        <Border Grid.Row="0" Background="{DynamicResource UserSideBarBackground}" CornerRadius="5" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <DatePicker x:Name="datePicker"
                            Width="220"
                            Height="35"
                            VerticalContentAlignment="Center"
                            FontSize="14"
                            Margin="0,0,10,0"
                            Background="White"
                            Foreground="{DynamicResource UserSideBarBackground}"
                            FontWeight="Bold"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            SelectedDateFormat="Short"/>

                <Button Content="{DynamicResource SearchButton}"
                        Width="100" 
                        Height="35"
                        Background="{DynamicResource ButtonColor}"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="14"
                        BorderThickness="0"
                        
                        Click="OnSearchButtonClick"
                        Margin="5,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Bills List -->
        <ScrollViewer Grid.Row="1" Margin="0,15,0,0" VerticalScrollBarVisibility="Visible">
            <ItemsControl x:Name="billsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" Margin="0,0,5,0"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{DynamicResource UserSideBarBackground}"
                                BorderThickness="1"
                                CornerRadius="8"
                                Padding="20"
                                Margin="0,0,0,15"
                                Background="White"
                                Effect="{StaticResource CardShadowEffect}">

                            <StackPanel HorizontalAlignment="Stretch">
                                <!-- Store Header -->
                                <TextBlock Text="Glow &amp; go"
                                           FontWeight="Bold"
                                           FontSize="18"
                                           Foreground="{DynamicResource UserSideBarBackground}"
                                           TextAlignment="Center"/>

                                <Border Height="1" Background="#F0F0F0" Margin="0,8,0,8"/>

                                <!-- Bill Details -->
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding DateTime, StringFormat='Datum: {0:dd.MM.yyyy HH:mm}'}"
                                               FontWeight="SemiBold"
                                               FontSize="14"
                                               Foreground="#555555"/>

                                    <TextBlock Grid.Column="1"
                                               Text="{Binding PayingMethod, StringFormat='Način plaćanja: {0}'}"
                                               FontSize="14"
                                               Foreground="#555555"
                                               HorizontalAlignment="Right"/>
                                </Grid>

                                <Border Height="1" Background="#F0F0F0" Margin="0,8,0,8"/>

                                <!-- Total Amount -->
                                <TextBlock Text="{Binding Price, StringFormat='UKUPNO: {0:C}'}"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Foreground="{DynamicResource UserUpdateButton}"
                                           TextAlignment="Center"
                                           Margin="0,5"/>

                                <!-- Footer -->
                                <TextBlock Text="Hvala na kupovini! 🛍️"
                                           FontSize="14"
                                           Foreground="#888888"
                                           TextAlignment="Center"
                                           Margin="0,10,0,0"
                                           FontStyle="Italic"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>