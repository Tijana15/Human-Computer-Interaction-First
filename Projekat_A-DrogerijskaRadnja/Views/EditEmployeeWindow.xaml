<Window x:Class="Projekat_A_DrogerijskaRadnja.Views.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Employee"
        Width="330" Height="230"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Stretch the last row to take remaining space -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>

            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Name -->
        <TextBlock Text="Name:" FontWeight="Bold" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Employee.Name}" Grid.Row="0" Grid.Column="1" Margin="10,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

        <!-- Last Name -->
        <TextBlock Text="Last Name:" FontWeight="Bold" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Employee.LastName}" Grid.Row="1" Grid.Column="1" Margin="10,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

        <!-- Salary -->
        <TextBlock Text="Salary ($):" FontWeight="Bold" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Employee.Salary}" Grid.Row="2" Grid.Column="1" Margin="10,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

        <!-- Hire Date -->
        <TextBlock Text="Hire Date:" FontWeight="Bold" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Employee.HireDate}" Grid.Row="3" Grid.Column="1" Margin="10,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

        <!-- Shift -->
        <TextBlock Text="Shift:" FontWeight="Bold" Grid.Row="4" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Employee.Shift}" Grid.Row="4" Grid.Column="1" Margin="10,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

        <!-- Obligation -->
        <TextBlock Text="Obligation:" FontWeight="Bold" Grid.Row="5" VerticalAlignment="Center"/>
        <TextBox Text="{Binding Employee.Obligation}" Grid.Row="5" Grid.Column="1" Margin="10,0,0,5" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Update" Click="OnUpdateClick" Background="HotPink" Foreground="White" Width="100" Margin="10"/>
            <Button Content="Delete" Click="OnDeleteClick" Background="IndianRed" Foreground="White" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
